<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Navegacion_2890433.Gasolinera"
             Title="Gasolinera">

    <ScrollView>
        <StackLayout Margin="20,20,20,20" Spacing="10">
            <Image Source="gasolinera.jpg" HeightRequest="400" WidthRequest="600"/>
            <Label Text="App Gasolinera" FontSize="22" TextColor="GhostWhite"/>
            <Entry x:Name="Entry1" Placeholder="Ingres la cantidad de litros"/>
            <Entry x:Name="Entry2" Placeholder="Ingrese precio por litro"/>
            <Button x:Name="BtnCalcular" Text="Calcular monto" Clicked="BtnCalcular_Clicked" HorizontalOptions="End"/>
            <Label Text="Total" x:Name="LblTotal"/>
        </StackLayout>
    </ScrollView>
</ContentPage>