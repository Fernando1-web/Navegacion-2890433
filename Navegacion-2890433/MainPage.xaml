<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Navegacion_2890433.MainPage"
             Title="Inicio">

    <ScrollView>
        <StackLayout Margin="20,20,20,20" Spacing="10">
            <Image Source="dotnet_bot.png" HorizontalOptions="CenterAndExpand" HeightRequest="200" WidthRequest="200"/>

            <Button x:Name="BtnCambio" Text="App Cambio" Clicked="BtnCambio_Clicked" CornerRadius="10"></Button>
            <Button x:Name="BtnSuperficie" Text="App Superficie" Clicked="BtnSuperficie_Clicked" CornerRadius="10"></Button>
            <Button x:Name="BtnDinosaurio" Text="App Dinosaurio" Clicked="BtnDinosaurio_Clicked" CornerRadius="10"></Button>
            <Button x:Name="BtnGasolinera" Text="App Gasolinera" Clicked="BtnGasolinera_Clicked" CornerRadius="10"></Button>
        </StackLayout>
    </ScrollView>

</ContentPage>
